<div>
    <a asp-action="Index">Back to List</a>
</div>
<div id="container"> </div>
@section Scripts{
    <script>
        function loadImagen(posicion) {
            $(document).ready(function(){
                $("#container").load("/Zapatillas/_PartialPaginacion?posicion="
                    + posicion + "&idproducto=" + @Model.IdProducto);
            })
        }
        loadImagen(1);
    </script>
}
 